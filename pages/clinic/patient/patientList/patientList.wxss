.addNewPatient{
  position: fixed;
  width: 80px;
  height: 20px;
  font-size: 16px;
  text-align: center;
  background-color: #1F91F2;
  color: #FFFFFF;
  top: 100px;
  right: 20px;
  border-radius:5px;
}

.button-view{
  background-color:gray;
  width: 100%;
  height: 40px;
  position: fixed;
  top: 0px;
  z-index: 999;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

.all-patient-button{
  background-color: #fff;
  border-radius: 0;
  width: 50%;
  height: 100%;
  font-size: 14px;
  line-height: 40px;
  border-bottom: solid 1px;
}

.all-patient-button::after{
  border: none;
  border-radius: 0;
}

.treat-patient-button{
  background-color: #fff;
  border-radius: 0;
  width: 50%;
  height: 100%;
  font-size: 14px;
  line-height: 40px;
  border-bottom: solid 1px;
}

.treat-patient-button::after{
  border: none;
}

