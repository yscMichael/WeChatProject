.main-view{
  background-color: #fff;
  width: 100%;
  overflow: hidden;
  padding: 1rpx;
}

.line-height-15{
  background-color: #fff;
  width: 100%;
  height: 15px;
}

.center-view{
  background-color: #fff;
  padding: 1rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.left-groupNo{
  background-color: #fff;
  min-width: 40px;
  text-align: center;
}

.left-groupNo-text{
  border-radius: 50%;
  border: 1px #555555 solid;
  width: 25px;
  height: 25px;
  display: inline-block;
  line-height: 25px;
}

.drun-info{
  background-color: #F2F3F5;
  min-width: calc(100% - 40px - 16px);
  margin-right: 15px;
  padding: 1rpx;
}

.drun-info-main{
  overflow: hidden;
}

.drun-info-image{
  background-color: #fff;
  width: 90px;
  height: 90px;
  margin-left: 15px;
  margin-top: 15px;
  margin-bottom: 15px;
  float: left;
}

.drun-info-content{
  background-color: #fff;
  float: left;
  margin-left: 13px;
  min-width: calc(100% - 90px - 15px - 13px);
}

.drun-info-right{
  float: left;
  margin-left: 13px;
  margin-top: 15px;
  margin-bottom: 15px;
  max-width: calc(100% - 15px - 90px - 13px);
}

.name-number{
  display: flex;
}

.name{
  /* 超出一行文字自动隐藏 */
  overflow:hidden;
  /*文字隐藏后添加省略号 */
  text-overflow:ellipsis;
  /*强制不换行*/
  white-space:nowrap; 
}

.number{
  font-size: 15px;
  min-width: 85px;
}

.price{
  float: left;
}

.count{
  float: right;
}

.bottom-line{
  background-color: #E3E3E3;
  height: 1px;
  margin-left: 118px;
}

.font-12{
  color: #888888;
  font-size: 12px;
}

.font-black-15{
  color: #333333;
  font-size: 15px;
}

.font-gray-15{
  color: #888888;
  font-size: 15px;
}

.font-16{
  color: #333333;
  font-size: 16px;
}



