Page {
  height: 100%;
  width: 100%;
}

.mainBackgroundView{
  width: 100%;
  height: calc(100% - 45px);
  margin-bottom: 45px;
  background-color: white;
}

/* 1、药品图片 */
.header-view{
  width: 100%;
  height: 60px;
  font-size: 15px;
  color: #A4A9B0;
  display: flex;
  align-items: center;
  background-color: white;
}

.header-left-image{
  height: 36px;
  margin-left: 12px;
  flex: 0 0 36px;
}

.header-content {
  flex-grow: 1;
  margin-left: 12px;
}

.header-right-image{
  height: 36px;
  margin-right: 12px;
  flex: 0 0 36px;
}

/* 2、通用组件样式 */
.line-big{
  background-color: #F1F0F5;
  width: 100%;
  height: 10px;
}

.line-small{
  background-color: #F1F0F5;
  width: 100%;
  height: 1px;
}

.out-date{
  display: flex;
  align-items: center;
  background-color: white;
}

.many-date-view{
  display: flex;
  align-items: center;
  background-color: white;
}

.manufacturer-main-view{
  position: relative;
  background-color: blue;
}

.item-view{
  display: flex;
  align-items: center;
  background-color: white;
  position: relative;
}

.popManufacturer{
  position: absolute;
  right: 15px;
  width: 200px;
  height: 160px;
  box-shadow: 2px 2px 2px #888888;
}

.flag{
  flex: 0 0 10px;
  margin-left: 6px;
  color: #F84848;
  font-size: 15px;
}

.flag-white{
  color: white;
}

.title{
  padding: 10px 10px 10px 0px;
  flex: 0 0 75px;
  color: #333333;
  font-size: 15px;
}

.title-blue{
  padding: 10px 10px 10px 0px;
  flex: 0 0 110px;
  color: #45A7FB;
  font-size: 15px;
  margin-left: 15px;
}

.right-content{
  flex-grow: 1;
  text-align: right;
  color: #333333;
  font-size: 15px;
  margin-right: 10px;
}

.date-image-view{
  flex-grow: 1;
  text-align: right;
  color: #333333;
  font-size: 15px;
}

.many-date-image{
  width: 18px;
  height: 18px;
}

.moreButton{
  width: 8px;
  height: 13px;
  flex: 0 0 10px;
  margin-right: 10px;
}

.scanButton{
  width: 17px;
  height: 20px;
  flex: 0 0 17px;
  margin-right: 10px;
}

.moreButton-none{
  display: none;
}

.change-unit-title{
  padding: 10px 5px 10px 0px;
  flex: 0 0 140px;
  color: #333333;
  font-size: 15px;
}

.change-unit-content{
  flex-grow: 1;
  margin-right: 10px;

  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.unit-title{
  color: #333333;
  font-size: 15px;
  flex-grow: 1;
  text-align: right;
  margin-right: 5px;
}

.unit-input{
  text-align: center;
  color: #333333;
  font-size: 15px;
  width: 50px;
  background-color: #ECECEC;
}

.unit-right-title{
  color: #333333;
  font-size: 15px;
  margin-left: 5px;
}

.safe-unit-input{
  text-align: center;
  color: #333333;
  background-color: #ECECEC;
  font-size: 15px;
  width: 66px;
}

.safe-unit-title{
  font-size: 20px;
  color: #262626;
  margin-left: 5px;
  margin-right: 5px;
}

.preventTouchMove{
  top: 0px ; 
  left:   0px ; 
  width:   100% ; 
  height:   100% ; 
  overflow:   hidden ; 
  position:   fixed ; 
  z-index:   0 ; 
}

.content-view{
  padding: 10px;
  font-size: 15px;
  color: #000000;
  background-color: white;
}

.small-line{
  background-color: #DFDFE1;
  width: 100%;
  height: 1px;
  margin-left: 10px;
}

.bottom-button{
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 0px;
  height: 45px;
  /* width: 100%; */
  text-align: center;
  line-height: 45px;
  background-color: #2993EF;
  color: white;
  font-size: 16px;
  z-index: 999;
}

.gray-content{
  color: lightgray;
}

.save-class{
  background-color: lightgray;
}