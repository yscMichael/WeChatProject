.flex-main{
  display: flex;
  border: 1px solid white;
  box-sizing: border-box;
}

.flex-main-left{
  background-color: white;
  flex: 0 0 45px;
  order: -1;
}

.flex-main-left image{
  width: 72px;
  height: 72px;
  display: block;

  margin: 10px 5px 10px 10px;
}

.flex-main-content{
  background-color: white;
  flex-grow: 1;
  overflow: hidden;
}

.flex-content-title{
  margin-top: 7px;
  font-size: 14px;
  color: #333333;
  font-weight: bold;
  margin-left: 5px;
}

.flex-content-subView{
  background-color: white;
  display: flex;
  flex-wrap:wrap;
}

.flex-content-subTitleFirst{
  /* 最大宽度(把右边的挤走) */
  /* 但是太长了、会进行换行 */
  max-width: 100%;
  /* 不缩放 */
  flex-shrink: 0;

  border-radius: 3px;
  border: 1rpx solid #1F91F2;
  font-size: 12px;
  color: #1F91F2;
  margin-left: 5px;

  /* overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; */
} 

.flex-content-subTitleTwo{  
  /* 可拉伸 */
  flex-flow: 1;
  /* 可压缩 */
  flex-shrink: 1;

  color: #999999;
  font-size: 12px;
  margin-left: 5px;

  /* overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; */
}

.flex-content-secondView{
  margin-left: 5px;
  margin-top: 5px;
  color: #999999;
  font-size: 12px;
  display: flex;
  align-items: center;
}

.flex-content-bottom{
  color: #999999;
  font-size: 12px;
  margin-bottom: 10px;
  margin-left: 5px;
  display: flex;
  align-items: center;
}

.line-small{
  background-color: #F1F0F5;
  width: 100%;
  height: 1px;
}

.common-left-margin{
  margin-left: 10px;
}

