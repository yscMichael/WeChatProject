.initdruglistCell{
  width: 100%;
  background-color: white;
  border-bottom: 1rpx solid #ececec;
  padding-left: 210rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  position: relative;
}

/* 图片 */
.initdruglistCell_drugImage {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  transform: translateY(-50%);
}
.initdruglistCell_drugImage image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

/* 文本区域 */
.initdruglistCell_contentView {
  width: 100%;
  position: relative;
}

.initdruglistCell_common_name {
  font-size: 16px;
  color: #333333;
  min-height: 40rpx;

}

.initdruglistCell_mk_view {
  width: 100%;
  height: 40rpx;
  padding-top: 5rpx;
}

.initdruglistCell_manufacturer {
  border-radius: 3px;
  border: 1rpx solid #1F91F2;
  font-size: 12px;
  color: #1F91F2;
  height: 30rpx;
  float: left;
  padding-left: 5px;
  padding-right: 5px;
}

.initdruglistCell_key_name {
  position: relative;
  color: #999999;
  font-size: 14px;
  height: 30rpx;
  left: 10px;
}

.initdruglistCell_content_text {
  position: relative;
  color: #999999;
  font-size: 14px;
  height: 30rpx;
  padding-top: 5rpx;
}