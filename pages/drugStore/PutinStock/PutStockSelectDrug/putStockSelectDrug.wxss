page {
  height: 100%;
  width: 100%;
}

.main-scroll{
  background-color: #eee;
  width: 100%;
  height: calc(100% - 60px);
}

/* 列表cell样式 */
.putinStockDrugCell {
  width: 100%;
  background-color: white;
  box-sizing: border-box;
  position: relative;
  padding-left: 260rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.putinStockDrugCell::after {
  content: '';
  position: absolute;
  left: 85rpx;
  right: 0;
  bottom: 0;
  height: 1px;
  border-top: 1px solid #D3D1D1;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  z-index: 2;
}

/* 选中图标 */
.putinStockDrugCell_selectIcon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 药品图片 */
.putinStockDrugCell_drugImage {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  left: 80rpx;
  top: 50%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  transform: translateY(-50%);
}

.putinStockDrugCell_drugImage image {
  width: 100%;
  height: 100%;
}

/* 区域 */
/* 药品信息 */
.putinStockDrugCell_text_view {
  width: 100%;
}

/* 药品名称 */
.putinStockDrugCell_drugName {
  color: #333333;
  font-size: 16px;
  min-height: 30rpx;
}

/* 商品名到厂家 */
.putinStockDrugCell_content {
  color: #999999;
  font-size: 14px;
  min-height: 30rpx;
}

/* 底部 */
.putinStockBottomView {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 60px;
  z-index: 999;
  background-color: white;

  display: flex;
  align-items: center;
}

/* 底部计数 */
.putinStockBottomCount {
  font-size: 16px;
  color: #333333;
  flex-grow: 1;
  margin-left: 15px;
}

/* 底部按钮 */
.putinStockBottomfinishButton {
  background-color: #1F91F2;
  flex: 0 0 120px;
  font-size: 16px;
  color: white;
  height: 100%;

  display: flex;
  justify-content: center;
  align-items: center;
}

.noData-view{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #eee;
}

.noData-view image{ 
  width: 237rpx;
  height: 245rpx;
}