Page{
  background-color: #F1F0F5;
}

.head-view{
  background-color:#3E9FF2;
  width: 100%;
  height: 100px;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.head-view image{
  width: 50px;
  height: 50px;
  display: inline-block;
  margin-left: 10px;
}

.head-view-text{
  margin-left: 5px;
}

.head-name{
  font-size: 13px;
  color: white;
}

.head-department{
  font-size: 13px;
  color:#DDEBFD;
} 

.message{
  display: flex;
  align-items: center;
  position: relative;
  background-color: white;
}

.left-image{
  width: 25px;
  height: 25px;
  margin: 10px;
}

.center-title{
  color: #555555;
  font-size: 15px;
}

.right-image{
  width: 8px;
  height: 12px;
  position: absolute;
  right: 10px;
}

.hot-line{
  background-color: #F1F0F5;
  color: #A9A9AB;
  font-size: 12px;
  text-align: center;
  padding: 5px;
}

.logout{
  background-color: white;
  color: #646464;
  font-size: 15px;
  text-align: center;
  padding: 10px;
}

.line-big{
  background-color: #F1F0F5;
  width: 100%;
  height: 10px;
}

.line-small{
  background-color: #F9F9F9;
  width: 100%;
  height: 1px;
}