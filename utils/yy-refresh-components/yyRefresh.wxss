.bottom-view{
  background-color: #eee;
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom-image{
  width: 25px;
  height: 25px;
}

.loading{
  display: inline-block;
  animation: viewlinear 1.5s linear infinite;
}

@keyframes viewlinear {
  0% {transform: rotate(0deg)}
  50% {transform: rotate(180deg)}
  100% {transform: rotate(360deg)}
}

.bottom-title{
  font-size: 16px;
  margin-left: 10px;
}